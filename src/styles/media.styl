@media (max-width: 680px)
  .title
    font-size 50px
    margin-bottom 30px
  .advantages
    flex-direction column
  .advantages-block
    width 80%
    margin 0 auto 20px
    &:nth-child(n+2)
      margin-left auto
  .title-welcome
    font-size 45px
    background-size 55px 55px
  .quote
    font-size 26px
  .wrap-bg-loves
    margin-bottom 80px
  .form
    margin-bottom 80px
  .footer-subscribe__label
    flex-basis 100%
    margin-bottom 5px
  .footer-subscribe__input
    margin-left 0
  .footer-menu
    padding 15px 0 0
  .footer-menu__item
    flex-basis 33.3%
    text-align center
    margin-bottom 15px
    &:nth-child(n+2)
      margin-left 0

@media (max-width: 480px)
  .menu-hamburger
    margin-right 30px
  .title
    font-size 36px
    padding 0 45px
    margin-bottom 20px
  .btn-main-wrap
    margin-bottom 50px
  .advantages-block
    height 240px
  .one-world,
  .two-hearts
    background-position center 35px
  .one-site
    background-position center 44px
  .advantages-block__text
    height 80px
    font-size 28px
    line-height 80px
  .title-welcome
    font-size 36px
    background-size 45px 45px
  .title-welcome
    padding-left 55px
  .wrap-bg-loves
    margin-bottom 50px
  .quote
    font-size 22px
    padding 0 20px
  .form
    max-width 380px
    padding 32px
  .form__title
    font-size 32px
    margin-bottom 25px
  .wrap-bg-circle
    height 500px
  .circle-main
    width 300px
    height 300px
    &:before
      width 362px
      height 362px
  .circle__title
    font-size 45px
  .circle__desc
    font-size 32px
  .circle__btn
    width 170px
    height 42px
  .footer-subscribe__input
    flex-basis 280px
    border-right 1px solid #cdcdcd 
    border-radius 4px
    margin-bottom 10px
  .footer-subscribe__btn
    width 280px
    border-radius 4px
  .widget-social
    width 280px
    height 40px
    display flex
    justify-content space-around
    align-items center
    position static
    margin 0 auto 35px
    padding 0
    border-radius 3px
  .widget-social__link
    margin-bottom 0
  .footer-subscribe
    margin-bottom 50px
  .footer-menu__item
    flex-basis 50%
  .footer__copyright
    padding 0 20px

@media (max-width: 380px)
  .logo
    margin-bottom 40px
    padding 0 80px
  .title
    font-size 30px
    padding 0 25px
  .btn-main-wrap
    margin-bottom 40px
  .wrap-bg-loves
    margin-bottom 35px
  .title-welcome
    font-size 28px
    background-size 35px 35px
    margin-bottom 25px
    padding-left 45px
  .form
    max-width 320px
  .form__title
    font-size 26px
  .form__send-btn
    width 240px
  .wrap-bg-circle
    height 400px
  .circle-main
    width 270px
    height 270px
    &:before
      width 320px
      height 320px
  .circle__title
    font-size 36px